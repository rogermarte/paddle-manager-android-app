<?xml version="1.0" encoding="utf-8"?>
<Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#2088c2"
    android:gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="fill_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.balysv.materialmenu.MaterialMenuView
            android:id="@+id/action_bar_menu"
            style="@style/ToolbarHomeButton" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/customTitle"
                style="@style/text_actionbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/gap_medium"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_size_large" />

            <TextView
                android:id="@+id/customSubtitle"
                style="@style/text_actionbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/gap_medium"
                android:layout_marginEnd="@dimen/gap_high"
                android:layout_alignParentEnd="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_size_large"
                android:visibility="gone"
                />

        </RelativeLayout>

    </LinearLayout>
</Toolbar>