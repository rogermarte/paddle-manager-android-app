<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="text_actionbar">
        <item name="android:textSize">@dimen/font_size_huge</item>
        <item name="android:textColor">@android:color/white</item>

    </style>

    <style name="ToolbarHomeButton">
        <item name="android:padding">@dimen/gap_medium</item>
        <item name="android:layout_width">@dimen/toolbar_home_button</item>
        <item name="android:layout_height">@dimen/toolbar_home_button</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="divider">
        <item name="android:background">@color/divider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider</item>
    </style>

    <style name="spinner_material"> <!-- used for MaterialSpinner widgets -->
        <item name="android:focusable">true</item>
        <item name="ms_alignLabels">false</item>
        <item name="ms_floatingLabelColor">@color/font_color_sec</item>
        <item name="ms_baseColor">@color/edit_text_bottom_line</item>
        <item name="ms_errorColor">@color/error</item>
        <item name="ms_arrowColor">@color/font_color_sec</item>
        <item name="android:dropDownWidth">wrap_content</item>
    </style>

    <style name="spinner_material_form" parent="spinner_material"> <!-- used for MaterialSpinner widgets -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/gap_small</item>
    </style>
</resources>
